generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL") // uses a direct connection
}

model Post {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  excerpt   String?
  content   String
  published Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Profile {
  id        String  @id @default("user")
  name      String
  title     String
  bio       String
  headline  String?
  email     String
  phone     String?
  linkedin  String?
  resumeUrl String?
}

model Experience {
  id          String  @id @default(cuid())
  role        String
  company     String
  client      String?
  startDate   String
  endDate     String?
  description String
  impact      String?
  skills      String  @default("[]")
  order       Int     @default(0)
}

model Skill {
  id       String @id @default(cuid())
  name     String
  category String
}

model Education {
  id          String @id @default(cuid())
  institution String
  degree      String
  date        String
  details     String
}

model Settings {
  key   String @id
  value String
}
